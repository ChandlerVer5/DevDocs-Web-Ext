{
  "name": "devdocs-web-ext",
  "version": "0.2.2",
  "description": "Find documents in devdocs.io with a popup window from a Chrome Extension!",
  "main": "index.js",
  "dependencies": {
    "classnames": "^2.2.6",
    "compass-mixins": "^0.12.10",
    "cross-env": "^5.2.0",
    "github-fork-ribbon-css": "^0.2.3",
    "history": "^4.9.0",
    "is-dark": "^1.0.4",
    "jquery": "^3.4.1",
    "keymaster": "^1.6.2",
    "ky": "^0.11.1",
    "lodash": "^4.17.14",
    "material-design-icons": "^3.0.1",
    "prop-types": "^15.7.2",
    "raven-js": "^3.27.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-keys": "^1.3.1",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "rmwc": "^5.5.2",
    "storage-lru": "^0.1.1",
    "webextension-polyfill": "^0.4.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/firefox-webext-browser": "^67.0.2",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/keymaster": "^1.6.28",
    "@types/lodash": "^4.14.136",
    "@types/lodash-webpack-plugin": "^0.11.3",
    "@types/mini-css-extract-plugin": "^0.2.1",
    "@types/node": "^12.6.2",
    "@types/puppeteer": "^1.12.4",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.4",
    "@types/webpack": "^4.4.35",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "ava": "^2.2.0",
    "cache-loader": "^4.0.1",
    "coffee-loader": "^0.9.0",
    "coffeescript": "1.x",
    "concurrently": "^4.1.1",
    "core-js": "^3.1.4",
    "css-loader": "^3.0.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^13.0.1",
    "eslint-config-standard-react": "^8.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-standard": "^4.0.0",
    "exports-loader": "^0.7.0",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "imports-loader": "^0.8.0",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "puppeteer": "^1.18.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "thread-loader": "^2.1.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "url-loader": "^2.0.1",
    "web-ext": "^3.1.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack -p && web-ext build -s extension -a artifacts -o",
    "build:dev": "cross-env NODE_ENV=development webpack",
    "concurrently": "concurrently \"yarn watch\" \"yarn puppeteer\"",
    "postinstall": "git submodule update --init --remote",
    "puppeteer": "ts-node -e \"import path from 'path'; import puppeteer from 'puppeteer'; const extensionPath = path.resolve(__dirname, 'extension'); puppeteer.launch({ defaultViewport: null, devtools: true, args: ['--lang=bn-BD,bn', '--disable-extensions-except=' + extensionPath, '--load-extension=' + extensionPath] })\"",
    "start": "ts-node -e \"import fs from 'fs'; import { execSync } from 'child_process'; if (!fs.lstatSync('extension/dist').isDirectory()) execSync('yarn build:dev'); execSync('yarn concurrently')\";",
    "test": "eslint src/**/*.tsx src/**/*.ts && cross-env BUILD_MODE=test webpack -p && ava",
    "watch": "yarn build:dev -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arianrhodsandlot/DevDocs-Web-Ext.git"
  },
  "author": "arianrhodsandlot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arianrhodsandlot/DevDocs-Web-Ext/issues"
  },
  "homepage": "https://github.com/arianrhodsandlot/DevDocs-Web-Ext#readme",
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "globals": {
      "BUILD_MODE": "readonly",
      "VERSION": "readonly",
      "GIT_VERSION": "readonly"
    },
    "plugins": [
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "standard",
      "standard-react"
    ],
    "rules": {
      "no-var": "error",
      "prefer-const": "error",
      "no-param-reassign": "error",
      "no-undefined": "error",
      "no-unused-expressions": "error",
      "quote-props": [
        "error",
        "as-needed"
      ],
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ],
      "camelcase": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "caughtErrors": "none"
        }
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "@typescript-eslint/no-non-null-assertion": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "helpers": [
      "**/helpers/**/*"
    ]
  }
}
