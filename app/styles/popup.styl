global-reset()

html
  width auto !important
  height 350px !important
  overflow hidden
body
  width 400px !important
  height 400px !important
  font-family 'Open Sans', 'Helvetica Neue', Arial, 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif
  overflow hidden
  background #f9f9f9
a
  text-decoration none

.hidden
  display none

.input
  display block
  padding 10px
  font-size 14px
  width calc(100% - 40px)
  margin 10px auto 0 auto
  background #fff
  border #d4d4d4
  border-radius 3px
  outline none
  &:focus
    border #35b5f4
    box-shadow 0 0 1px #35b5f4
.results, .content
  max-height 340px
  overflow auto
.result
  margin 10px auto 0 auto
  line-height 24px
  width 100%
  overflow ellipsis
  cursor pointer
  box-sizing border-box
  padding 0 10px
  font-family Consolas
  &.active
    background #e5e5e5
.splash,.loading-text
  color #d7d7d7
  margin 100px
  font-weight bold
  font-size 30px
  text-align center
.content
  padding 0 20px
  box-sizing border-box
  overflow auto
  line-height 1.6
  h1
    margin-top .4em

//overwrite some styles in devdocs.io
body
  font-size 75% !important

._list-item
  padding .25rem 1.75rem !important

._cordova,
._grunt,
._less,
._lodash,
._marionette,
._markdown,
._mocha,
._mongoose,
._sinon,
._chai,
._coffeescript,
._express,
._go,
._lua,
._maxcdn,
._meteor,
._requirejs
  padding 0 20px 0 40px !important

._underscore
  padding-left 40px !important
